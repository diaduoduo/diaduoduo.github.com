.mask {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.2);
  z-index: 12;
  animation: fadeIn 0.3s
}
@keyframes fadeIn{
  from{
    opacity: 0;
  }
  to{
    opacity: 1;
  }
}

.modal-container {
  position: fixed;
  z-index: 13;
  max-height: 90%;
  padding: 59rpx 30rpx 0 30rpx;
  overflow: hidden;
  background: #fff;
  display: flex;
  flex-direction: column;
  transition: all 0.3s;
}

.center {
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  border-radius: 20rpx;
  width: 570rpx;
  animation: move1 0.3s;
}
